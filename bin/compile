#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}
cd $BUILD_DIR
echo "-----> check current path"
ls -a
if [ -d "/app/gecode" ]; then
  echo "-----> /app/gecode exists, just compile solver"
else 
  echo "-----> Downloading GECODE"
  #download gecode
  wget https://github.com/Gecode/gecode/archive/release-6.0.0.zip
  echo "-----> Unpacking GECODE"
  #unpack gecode
  unzip release-6.0.0.zip
  ls
  #go to gecode's folder
  #cd gecode-release-6.0.0
  echo "-----> start to configure GECODE"
  #./configure --disable-examples
  echo "-----> compiling GECODE"
  #make
  echo "-----> moving compiled GECODE to /app folder"
  #copy files to app & linking
  cd ..
  #cp -R gecode-release-6.0.0 /app/gecode
fi
echo "-----> moving to /app folder"
cd /app
echo "-----> content of app folder"
ls 
# configure
if [ -f configure ]; then
  echo "-----> Configuring"
  ./configure 2>&1 | indent
fi

# make
echo "-----> Compiling with Make..."
#make all-heroku | indent
