#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

cd $BUILD_DIR
if [ -d "/app" ]; then
  echo "-----> /app dir exists!!!, lets move files to them"
fi
echo "-----> Downloading GECODE"
#download gecode
wget https://github.com/Gecode/gecode/archive/release-6.0.0.zip
echo "-----> get position ----------------->"
pwd

echo "-----> Unpacking GECODE"
#unpack gecode
unzip release-6.0.0.zip
#go to gecode's folder
cd gecode-release-6.0.0
echo "-----> start to configure GECODE"
./configure --disable-examples
echo "-----> compiling GECODE"
make

echo "-----> installing GECODE"
#TODO: if install isn't possible, then copy files to app & linking
make install

# configure
if [ -f configure ]; then
  echo "-----> Configuring"
  ./configure 2>&1 | indent
fi

# make
echo "-----> Compiling with Make..."
make all-heroku | indent
